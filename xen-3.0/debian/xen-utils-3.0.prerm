#!/bin/sh

set -e

case "$1" in
remove|deconfigure)
	invoke-rc.d xendomains stop || true
	invoke-rc.d xend stop || true
	;;
upgrade)
	# On upgrade just restart xend, but don't touch the running domains...
	invoke-rc.d xend stop || true
	;;
failed-upgrade)
	;;
*)
	echo "postrm called with unknown argument \`$1'" >&2
	exit 
	;;
esac

#DEBHELPER#

exit 0

